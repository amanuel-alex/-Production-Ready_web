generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model post {
  id        String  @id
  title     String
  content   String?
  published Boolean @default(false)
  authorId  String
}

model user {
  id        String   @id
  password  String
  email     String   @unique(map: "User_email_key")
  username  String
  createdAt DateTime @default(now())
  updatedAt DateTime
}